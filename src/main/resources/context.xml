<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="o1" class="com.my.objects.Object1"/>
    <bean id="of" class="com.my.ObjectFactory"/>

    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>
    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" />
    <bean class="com.my.beanpostprocessors.MyBeanPostProcessor"/>
    <bean class="com.my.beanpostprocessors.TransactionPostProcessor"/>
    <bean class="com.my.beanpostprocessors.BenchmarkPostProcessor"/>
</beans>